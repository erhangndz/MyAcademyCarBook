@using CarBook.DtoLayer.DTOs.BrandDtos
@model List<BrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Markalar</h3>
@{
    int count = 0;
}
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Marka</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.BrandName</td>
                <td>
                    <button onclick="deleteBrand(@item.BrandID)" type="submit" class="btn btn-outline-danger">Sil</button>
                    <a asp-action="UpdateBrand" asp-route-id="@item.BrandID" class="btn btn-outline-info">Düzenle</a>

                </td>
            </tr>
        }
    </table>
    <br />
    <a asp-action="AddBrand" asp-controller="Brand" class="btn btn-outline-dark">Yeni Marka Ekle</a>
</div>

<script>
    function deleteBrand(id) {
        Swal.fire({

            title: 'Silmek istediğinize emin misiniz?',
            text: 'Bu öğeyi silerseniz geri alamazsınız!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Sil',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Brand/DeleteBrand?id=" + id; // Yönlendirilecek URL'yi buraya yazın
            }
        });
    }
</script>