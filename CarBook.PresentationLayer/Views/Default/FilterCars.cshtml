<div class="col-md-4 d-flex align-items-center">
    <form asp-action="FilterCars" asp-controller="Default" class="request-form ftco-animate bg-primary" method="post">
        <h2>Araç Kiralayın</h2>
        <div class="form-group">
            <label for="" class="label">Araç Markası</label>
            <input type="text" class="form-control" name="brand"  placeholder="Opel, Mercedes, Volkswagen vs...">
        </div>
        <div class="form-group">
            <label for="" class="label">Araç Modeli</label>
            <input type="text" class="form-control" name="model"  placeholder="Astra, C200, Golf vs...">
        </div>
        <div class="d-flex">
            <div class="form-group mr-2">
                <label for="" class="label">Kiralama Tarihi</label>
                <input type="date" class="form-control" @* id="book_pick_date" *@ placeholder="Tarih">
            </div>
            <div class="form-group ml-2">
                <label for="" class="label">Teslim Tarihi</label>
                <input type="date" class="form-control" @* id="book_off_date" *@ placeholder="Tarih">
            </div>
        </div>
        @*  <div class="form-group">
        <label for="" class="label">Kiralama Saati</label>
        <input type="text" class="form-control" id="time_pick" placeholder="Time">
        </div> *@
        <div class="form-group">
            <input type="submit" value="Hemen Kirala" class="btn btn-secondary py-3 px-4">
        </div>
    </form>
</div>