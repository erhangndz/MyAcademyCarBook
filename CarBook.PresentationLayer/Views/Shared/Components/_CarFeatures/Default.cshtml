@model List<CarFeature>
@{
    var color = "";
    var status = "";

}
<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <ul class="features">
                    @if (item.HasFeature == true) { color = "check"; status = "ion-ios-checkmark"; } else { color = "remove"; status = "ion-ios-close"; }

                    <li class="@color"><span class="@status"></span>@item.FeatureName</li>
                </ul>

            </div>
        }
    </div>
</div>