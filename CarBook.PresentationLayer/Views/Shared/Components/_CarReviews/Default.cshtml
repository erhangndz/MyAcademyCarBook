@model List<Review>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
	<div class="row">
		<div class="col-md-12">
			
            <section style="background-color:white">
                <div class="container my-5 py-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-12 col-lg-10 col-xl-8">
                            <div class="card col-md-12">
                                <h3 class="head">@ViewBag.count Yorum</h3>
                                @foreach (var item in Model)
                                {
                                    
                                
                                <div class="card-body">
                                    <div class="d-flex flex-start align-items-center">
                                        <img class="rounded-circle shadow-1-strong me-3"
                                             src="https://w7.pngwing.com/pngs/178/595/png-transparent-user-profile-computer-icons-login-user-avatars-thumbnail.png" alt="avatar" width="60"
                                             height="60" />
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1 ml-2">@item.NameSurname</h6>
                                            <p class="text-muted small mb-0 ml-2">
                                               @item.CommentDate
                                            </p>
                                        </div>
                                    </div>

                                    <p class="mt-3 mb-4 pb-2 ml-5">
                                        @item.Comment
                                    </p>

                                   
                                </div>
                                }
                                @await Html.PartialAsync("MakeComment", new { id = ViewBag.id })
                            </div>
                        </div>
                    </div>
                </div>
            </section>
			
		</div>
		
	</div>
</div>